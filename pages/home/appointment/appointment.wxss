
page{
  height: 100%;
  background-color: #F3F3F3;
}
.container{
  background-color: #F3F3F3; 
}
.appointment{
  background-color: #F3F3F3;
}
.appointment-list{
  background-image: url("https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1598017095992&di=5098f25ce8d15d721791ec8d4a37754a&imgtype=0&src=http%3A%2F%2Fa3.att.hudong.com%2F14%2F75%2F01300000164186121366756803686.jpg");
}
.appointment-list{
  height: 360rpx;
  position: relative;
}
.appointment-user{
  display: flex;
  position: relative;
  padding-top: 100rpx;
}
.appointment-user text{
  font-size: 26rpx;
}
.appointment-user-img{
    margin:0 30rpx;
}
.appointment-user-img>image{
  width:112rpx;
  height: 112rpx;
  border-radius: 50%;
}
.appointment-user-title{
  line-height: 50rpx;
  font-size: 35rpx;
  color: #fff;
}
.reservation{
  margin-left: 20rpx;
  padding: 4rpx 10rpx;
  background:#CB9933;
  border-radius: 20rpx;
  font-size: 20rpx !important;
  color: #fff;
}
.appointment-Package{
  width: 100%;
  height: 170rpx;
  text-align: center;
  position: absolute;
  bottom: -40rpx;
}
.appointment-Package image{
  width: 95%;
  height: 100%;
  border-radius: 10rpx;
}
.appointment-type{
  display: flex;
  font-size: 25rpx;
  color: #CC9933;
  padding: 30rpx 0;
  margin-top: 40rpx;
}
.appointment-type>view{
  line-height: 58rpx;
}
.appointment-not{
  margin: 0rpx 15rpx;
}
.actives{
  font-size: 35rpx;
  border-bottom: 5rpx solid #CC9933;
  padding-bottom: 5rpx;
}
.actives::before{
  content: "ewqe";
  height: 5rpx;
  width: 10rpx;
  border-bottom: 5rpx solid #CC9933;
  top: 40rpx;
  position: absolute;
  right: -90rpx;
  }
  .appointment-listr{
    margin: 0 10rpx;
  }
  .appointment-list-details{
    background-color: #fff;
    padding:15rpx 15rpx;
    font-size: 29rpx;
    color: #A7A7A7;
    border-radius: 20rpx;
    margin-top: 38rpx;
  }
  .appointment-list-details:nth-of-type(1){
    margin-top: 0;
  }
  .appointment-img{
    height: 316rpx;
  }
  .appointment-img image{
    width: 100%;
    height: 100%;
  }
.appointment-name{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}
.appointment-name text:nth-of-type(1){
  font-size: 35rpx !important;
  font-weight: 500;
  color:#000000 ;
}
.appointment-content>view{
    padding: 8rpx 0;
    font-size: 22rpx;
}
.appointment-movement{
  color:#A7A7A7;
}
.appointment-next{
  display: flex;
  justify-content: space-between;
  color:#CC9933;
}
.appointmen-btn .appointmen-btn-style{
  background-color: #CC9933;
  color: #fff;
  border-radius: 20rpx;
  padding: 8rpx 25rpx;
  font-size: 22rpx;
}

/* 我的项目 */
.appointment-has-content{
  margin: 0 20rpx;
  font-size: 30rpx;
  padding-bottom: 20rpx;
}
.has-details-top{
  display: flex;
  justify-content: space-between;
}
.has-content-details{
  background-color: #fff;
  padding: 0 10rpx;
  position: relative;
  border-radius: 20rpx;
  margin-top: 40rpx;
}
.has-content-details:nth-of-type(1){
  margin-top: 0;
}
.has-details-top{
  padding: 10rpx 10rpx;
  border-bottom: 1rpx solid #A0A0A0;
  font-size: 25rpx;
}

.has-details-center{
  display: flex;
  padding: 15rpx 0;
}

.has-details-left{
  width: 37%;
  height: 174rpx;
}
.has-details-left image{
  width: 100%;
  height: 100%;
}
.has-details-right{
  width: 63%;
  padding-left: 20rpx;
  font-size: 25rpx;
}
.has-details-right>view{
   padding: 8rpx 0;
}
.has-details-btn{
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  color: #CC9933;
  padding: 8rpx 20rpx !important;
  border: 1px solid #CC9933;
  border-radius: 20rpx;
  font-size: 20rpx !important;
}
.has-details-content{
  color: #A7A7A7;
}
.has-details-next{
  font-size: 28rpx;
  color: #CC9933;
}
.details-top-status{
  color: #CC9933;
}