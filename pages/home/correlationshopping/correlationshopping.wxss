page{
  height: 100%;

}
.container{
  height: 100%;
  background: #eee;
}
.correlationshopping{
  background: #eee;
}

.correlationshopping-list{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  padding-left: 15rpx;
  padding-right: 34rpx;
  background: #fff;
  border-top: 22rpx solid #eee;
}

.icon-title{
  padding: 0  8rpx;
  background:#FFEDED;
  font-size: 20rpx;
  color: #DF181C;
  vertical-align: middle;
}
.correlationshopping-img{
  width: 22%;
}
.correlationshopping-img image{
    width: 146rpx;
    height:146rpx;
}
.correlationshopping-item{
  width:78%;
}
.item-icon{
  display: flex;
  justify-content: flex-end;
}
.item-icon image{
  width: 45rpx;
  height: 41rpx;
}

.correlationshopping-title{
  font-size: 34rpx;
}
.item-price{
  padding-top: 20rpx;
}

.item-price text:nth-of-type(1){
    color: #D90004;
    font-size: 26rpx;
    margin-right:10rpx;
}
.item-price text:nth-of-type(2){
  color: #CBCBCB;
  font-size: 24rpx;
  text-decoration: line-through;
}