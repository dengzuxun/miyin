/* pages/home/home.wxss */
.home-header{
  width: 100%;
}
.home-text{
  height: 64rpx;
  line-height: 64rpx;
  font-size: 25rpx;
  background:#FFAEAA;
  color: #fff;
  padding-left: 8rpx;
}
.home-tabar image{
  width: 100%;
  height: 284rpx;
}
.home-footer{
  /* padding: 60rpx 0; */
  margin-top: 50rpx;
}
.home-footer-set{
  display: flex;
  justify-content: space-around;
}
.home-footer-set image{
  width: 290rpx;
  height: 126rpx;
}
.home-footer-get{
  padding-top: 50rpx;
  display: flex;
  justify-content: space-around;
  font-size: 25rpx;
  text-align: center;
}
.home-footer-get image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.home-content{
  margin: 0 20rpx;
}
.van-sticky{
  padding: 20rpx 0;
  margin-top: 30rpx;
}
.box{
  display: flex;
  white-space: nowrap;
}
.typeIndex{
  background: #F8F8F8;
}
.box>text{
  padding: 0 20rpx;
  /* width:150rpx !important; */
  font-size: 30rpx;
  height: 66rpx;
  line-height: 66rpx;
}
.box1{
  color: #FF9793;
  border-bottom: 6rpx solid red;
  font-size: 35rpx !important;
}
.active{
  color: #FF9793;
}
.essay{
  width: 100%;
  background: #F8F8F8;
  border-radius: 10rpx;
}
.essay-content{
  margin-top: 30rpx;
  background-color: #fff;
  padding: 15rpx 0;
}
.essay-img{
  margin: 0 auto;
  width: 95%;
}
.essay-img image{
  width: 100%;
  border-radius: 15rpx;
  height: '';
}
.essay-top text{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.essay-title{
  text-align: left;
  padding:5rpx 15rpx;
  margin:0 20rpx;
  font-size: 20rpx !important;
  background: rgb(3, 170, 11);
  color: white;
  border-radius: 10rpx;

}