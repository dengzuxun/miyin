@import '../../../miniprogram_npm/@vant/weapp/common/index.wxss';

.information-item{
  margin: 0 30rpx;
  margin-top: 12rpx;
  background: #fff;
}
.information-item-title{
    font-size:22rpx;
    border-bottom: 2rpx solid #F4F4F4;
    display: flex;
    position: relative;
    padding: 10rpx 18rpx;
}

.information-item-title text{
  margin: 0 10rpx;
}

.item-title-list{
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.title-text{
  background: #FD992F;
  /* padding: 5rpx 8rpx; */
  color: #fff;
}
.information-item-cotent{
    padding: 0 25rpx;
}
.information-item-cotent view:nth-of-type(1){
    font-size: 28rpx;
    padding: 20rpx 0;
}
.information-item-cotent view:nth-of-type(2){
  font-size: 24rpx;
   border-bottom: 1rpx solid #F4F4F4;
}
.actives{
  border:none !important;
}

.iconfont{
  display: flex;
  justify-content: flex-end;
}